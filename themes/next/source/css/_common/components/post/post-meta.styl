.posts-expand .post-meta {
  margin: 3px 0 40px 0;
  color: $grey-dark;
  font-family: $font-family-posts;
  font-size: 12px;
  text-align: left;

  .post-category-list {
    display: inline-block;
    margin: 0;
    padding: 3px;
  }
  .post-category-list-link { color: $grey-dark; }

  .post-description {
    font-size: 14px;
    margin-top: 2px;
  }
}

.post-wordcount {
  if !hexo-config('post_wordcount.separated_meta') { display: inline-block; }
}

.post-meta-divider {
  margin: 0 .5em;
}
.post-type-icon {
  font-size: 12px;
  background-color: rgba(87, 80, 96, 0.86);
  color: #fff;
  padding: 0 1px;
  border-radius: 3px;
  margin-right: 4px;
  display: inline-block;
  height: 15px;
  line-height: 15px;
}
.post-type-icon .text {
  transform: scale(0.8);
  display: inline-block;
}
.post-meta-item-icon {
  margin-right: 3px;
  +tablet() {
    display: inline-block;
  }
  +mobile() {
    display: inline-block;
  }
}
.post-meta-item-text {
  +tablet() {
    display: none;
  }
  +mobile() {
    display: none;
  }
}

.posts-expand .post-comments-count {
  +mobile() { display: none; }
}
