.post-reward-wrap {
  float: right;
  margin-top: 2px;
  position: relative;
  cursor: pointer;
  .post-reward-content {
    width: 92px;
    text-align: center;
    border-radius: 4px;
    box-sizing: border-box;
    height: 26px;
    line-height: 26px;
    padding-right: 4px;
    background-color: #f15c5c;
    color: #fff;
    &:hover {
      opacity: 0.8;
    }
    .reward-title {
      display: inline-block;
      font-size: 12px;
      height: 26px;
      line-height: 26px;
      vertical-align: top;
    }
    .reward-btn {
      display: inline-block;
      vertical-align: top;
      font-size: 18px;
      width: 20px;
      height: 26px;
      line-height: 26px;
      cursor: pointer;
      outline: 0;
      padding: 0;
      margin: 0;
      letter-spacing: normal;
      text-transform: none;
      text-shadow: none;
      text-align: center;
      border: none;
      color: #fff;
      background: none;
      animation: beat 1.5s infinite;
      -webkit-animation: beat 1.5s infinite;
    }
  }
}

@keyframes beat {
  0% {
    transform: scale(0.8,0.8);
    opacity:1;
  }
  25% {
    transform: scale(1,1);
    opacity:0.8;
  }
  100% {
    transform: scale(0.8,0.8);
    opacity:1;
  }
}
@-webkit-keyframes beat {
  0% {
    transform: scale(0.8,0.8);
    opacity:1;
  }
  25% {
    transform: scale(1,1);
    opacity:0.8;
  }
  100% {
    transform: scale(0.8,0.8);
    opacity:1;
  }
}

