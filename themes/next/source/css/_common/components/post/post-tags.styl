.posts-expand .post-tags {
  position: relative;
  margin-top: 40px;
  text-align: left;

  a {
    display: inline-block;
    margin-right: 10px;
    font-size: 12px;
    border-bottom: none;
    background: $my-theme-color-light;
    color: #fff;
    padding: 0 7px;
    border-radius: 4px;
    &:hover {
      opacity: 0.8;
    }
  }
  .post-tags-wrap {
    float: left;
    width: 70%;
  }
  .qr-donate-content {
    display: none;
    position: absolute;
    right: 0;
    bottom: 40px;
    z-index: 1;
    &-item {
      display: inline-block;
      margin-left: 20px;
      &:first-child {
        margin-left: 0;
      }
      a {
        border:0;
        background: none;
        padding: 0;
        margin: 0;
      }
      img {
        width: 100px;
        max-width: 100%;
        display: inline-block;
        //margin: 0.8em 2em 0.8em 2em;
        vertical-align: top;
        border: 1px solid #dedede;
        border-radius: 4px;
      }
      .icon-pay {
        height: 12px;
        width: 100%;
        margin-top: 5px;
        &.wx {
          background: url("data:image/png;base64,") center no-repeat;
          background-size: auto 12px;
        }
        &.ali {
          background: url("data:image/png;base64,") center no-repeat;
          background-size: auto 12px;
        }
      }
    }
  }
}
