// Custom styles.
.page-home {
  .post-meta {
    margin-bottom: 5px;
  }
  .post-button.text-center {
    text-align: left;
  }
  .posts-expand .post-eof {
      display: block;
      margin: 30px 0 20px 0;
      width: 100%;
      height: 1px;
      background: #f1f1f1;
      text-align: center;
  }
  .post-body {
    p{
      margin-bottom: 15px;
    }
    .post-button {
      margin-top: 0px;
    }
    .btn {
      padding: 0 10px;
      font-size: 13px;
      text-align: left;
      text-decoration: none;
      border-bottom: 0;
      color: #666;
      transition-property: all;
      border: 1px solid $my-theme-color;
      line-height: 26px;
    }
    .btn:hover {
      color: #fff;
      background: $my-theme-color;
    }
  }
  .content {
    .pagination {
      margin-top: 90px;
      border-top: 0px;
      .page-number, .next, .prev {
        border-top: 0px;
      }
      .page-number {
        border-radius: 3px;
        border: 1px solid #ccc;
        margin: 0 6px;
      }
      .page-number.current {
        border: 1px solid $my-theme-color;
        background-color: $my-theme-color;
      }
    }
  }
}
