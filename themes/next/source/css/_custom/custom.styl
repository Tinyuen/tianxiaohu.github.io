// Custom styles.
body {
  height: 100%;
  .fix-bg {
    background: url(https://cdn.jsdelivr.net/gh/Tinyuen/blogcdn@0.0.3/img/blog_bg.jpg) center no-repeat;
    background-size: 100% 100%;
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: -10;
  }
  .back-to-top {
    background rgba(0, 0, 0, 0.81);
    color #fff;
    opacity 1;
    padding 3px 0;
    width 40px;
    right 50px;
    font-size 16px;
    border-radius 4px;
  }
  .back-to-top:hover {
    opacity 0.8;
  }
  .back-to-top.back-to-top-on {
    bottom: 70px;
  }
  .container {
    .footer {
      .footer-inner {
        color: #fff;
        a {
          color #dedede;
        }
      }
    }
  }
}
.page-home {
  .post-meta {
    margin-bottom: 5px;
  }
  .post-button.text-center {
    text-align: left;
  }
  .posts-expand .post-eof {
      display: block;
      margin: 30px 0 20px 0;
      width: 100%;
      height: 1px;
      background: #f1f1f1;
      text-align: center;
  }
  .post-body {
    p{
      margin-bottom: 15px;
      text-align: left;
      display: -webkit-box;
      text-overflow: ellipsis;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2;
      overflow: hidden;
      font-size: 14px;
    }
    .post-button {
      margin-top: 0px;
    }
    .btn {
      padding: 0 10px;
      font-size: 13px;
      text-align: left;
      text-decoration: none;
      color: #666;
      transition-property: all;
      border: 1px solid $my-theme-color;
      line-height: 26px;
    }
    .btn:hover {
      color: #fff;
      background: $my-theme-color;
    }
  }
  .content {
    .pagination {
      margin-top: 90px;
      border-top: 0px;
      .page-number, .next, .prev {
        border-top: 0px;
      }
      .page-number {
        border-radius: 3px;
        border: 1px solid #ccc;
        margin: 0 6px;
      }
      .page-number.current {
        border: 1px solid $my-theme-color;
        background-color: $my-theme-color;
      }
    }
  }
}
.page-post-detail {
  .tag-cloud {
    .tag-cloud-tags {
      margin-top: 100px;
      a {
        border-bottom: none;
      }
    }
  }
  .post-header {
    .post-title {
      color: #333;
      font-weight: bold;
    }
  }
  .post-body {
    p {
      font-size: 15px;
      color: #333;
    }
    h1, h2, h3, h4, h5, h6 {
      color: #333;
    }
  }
}

.utterances {
  max-width: none;
}
.sidebar {
  .site-author-image {
    &:hover {
      animation: swing 1s both;
    }
  }
  .post-toc {
    .nav {
      padding: 0 0px 5px 0px;
    }
    .post-toc-content {
      .nav-item {
        padding: 0 10px;
        line-height: 2;
        .nav-link {
          border-bottom none;
        }
      }
      .nav-item.active-current {
        background: #e8e8e8;
        border-radius: 5px;
        font-weight bold;
      }
    }
  }
}


@-webkit-keyframes swing {
  20% {
    -webkit-transform: rotate(15deg);
    transform: rotate(15deg)
  }

  40% {
    -webkit-transform: rotate(-10deg);
    transform: rotate(-10deg)
  }

  60% {
    -webkit-transform: rotate(5deg);
    transform: rotate(5deg)
  }

  80% {
    -webkit-transform: rotate(-5deg);
    transform: rotate(-5deg)
  }

  to {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg)
  }
}

@keyframes swing {
  20% {
    -webkit-transform: rotate(15deg);
    transform: rotate(15deg)
  }

  40% {
    -webkit-transform: rotate(-10deg);
    transform: rotate(-10deg)
  }

  60% {
    -webkit-transform: rotate(5deg);
    transform: rotate(5deg)
  }

  80% {
    -webkit-transform: rotate(-5deg);
    transform: rotate(-5deg)
  }

  to {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg)
  }
}
